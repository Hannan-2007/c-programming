#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int a;
    int b;
    int c;
    int total;
    int a_price = 100;
    int b_price = 20;
    int c_price = 10;
    scanf("%d",&a);
    scanf("%d",&b);
    scanf("%d",&c);
    total = (a * a_price)+(b * b_price)+(c * c_price);
    printf("Bill Details\n");
    printf("No of pizzas:%d\n",a);
    printf("No of puffs:%d\n", b);
    printf("No of cooldrinks:%d\n", c);
    printf("Total price=%d\n", total);
    printf("ENJOY THE SHOW!!!\n");
    return 0;
}
