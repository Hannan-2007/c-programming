#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int base, height;
    int x,y,z;
    float area, perimeter;
    scanf("%d", &base);
    scanf("%d", &height);
    scanf("%d", &x);
    scanf("%d", &y);
    scanf("%d", &z);
    area = 0.5 * base * height;
    perimeter = x+y+z;
    printf("Area of Triangle is %.2f\n", area);
    printf("Perimeter of Triangle is %.2f\n", perimeter);
    return 0;
}
