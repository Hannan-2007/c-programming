#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int n;
    int value;
    int positiveCount = 0, negativeCount = 0;
    scanf("%d", &n);
    for (int i = 0; i < n; i++) 
    {
        scanf("%d", &value);
        if (value > 0)
        {
            positiveCount++;
        } 
        else 
            if (value < 0) 
            {
            negativeCount++;
            }
    }
    printf("Count of Positive Integer is %.2f\n", (float)positiveCount);
    printf("Count of Negative Integer is %.2f\n", (float)negativeCount);

    return 0;
}
