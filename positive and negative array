#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int n;
    int i;
    int num;
    int positiveCount=0;
    int negativeCount=0;
    scanf("%d",&n);
    for (i=0;i<n;i++) 
    {
      scanf("%d",&num);
        if(num>0) 
        {
          positiveCount++;
        }
        else if(num<0)
        {
            negativeCount++;
        }
    }
    printf("Count of Positive Integer is %.2f\n", (float)positiveCount);
    printf("Count of Negative Integer is %.2f\n", (float)negativeCount);

    return 0;
}

